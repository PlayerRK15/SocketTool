<UserControl x:Class="UserControlForRK15.StackMenu"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:UserControlForRK15"
             mc:Ignorable="d" RenderTransformOrigin="0.5,0.5" 
             >
    <UserControl.RenderTransform>
        <TransformGroup>
            <ScaleTransform/>
            <SkewTransform/>
            <RotateTransform/>
            <TranslateTransform x:Name="offset" X="0"/>
        </TransformGroup>
    </UserControl.RenderTransform>
    <StackPanel Orientation="Vertical" Background="#FF02E2FF">
        <Border Height="20" Width="20" Background="#FF02E2FF">
            <Button HorizontalAlignment="Right" Click="Button_Click">
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <ContentPresenter Content="{TemplateBinding Content}"/>
                    </ControlTemplate>
                </Button.Template>
                <Canvas HorizontalAlignment="Right">
                    <Path Data="M13,5 L20,4" Fill="#FFF4F4F5" Height="1"  Stroke="{DynamicResource {x:Static SystemColors.WindowBrushKey}}" Stretch="Fill"  Width="10" Canvas.Left="5" Canvas.Top="5"/>
                    <Path Data="M13,5 L20,4" Fill="#FFF4F4F5" Height="1"  Stroke="{DynamicResource {x:Static SystemColors.WindowBrushKey}}" Stretch="Fill"  Width="10" Canvas.Left="5" Canvas.Top="9" HorizontalAlignment="Center" VerticalAlignment="Top"/>
                    <Path Data="M13,5 L20,4" Fill="#FFF4F4F5" Height="1"  Stroke="{DynamicResource {x:Static SystemColors.WindowBrushKey}}" Stretch="Fill"  Width="10" Canvas.Left="5" Canvas.Top="13" HorizontalAlignment="Center" VerticalAlignment="Top"/>
                </Canvas>
            </Button>
        </Border>
        <StackPanel x:Name="MenuContent" RenderTransformOrigin="0.5,0.5">
            <local:StackMenuItem HeadText="1级菜单    " HeadTileBackGroup="#FF02E2FF" ChildBackGroup="White"/>
            <local:StackMenuItem HeadText="2级菜单    " HeadTileBackGroup="#FF02E2FF" ChildBackGroup="White"/>
            <local:StackMenuItem HeadText="3级菜单    " HeadTileBackGroup="#FF02E2FF" ChildBackGroup="White"/>
        </StackPanel>
    </StackPanel>
</UserControl>
